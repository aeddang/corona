<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_deep">

    <TextView
        android:id="@+id/textTitle"
        style="@style/font_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/cp_tab_title"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_extra_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btnData"
        style="@style/font_bold"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginEnd="@dimen/margin_regular"
        android:background="@drawable/effect_circle_ripple"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnNews" />

    <ImageButton
        android:id="@+id/btnNews"
        style="@style/font_bold"
        android:layout_width="47dp"
        android:layout_height="50dp"
        android:background="@drawable/effect_circle_ripple"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_news"
        app:layout_constraintBottom_toBottomOf="@id/btnData"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>