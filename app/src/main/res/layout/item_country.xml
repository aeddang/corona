<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/effect_rect_ripple"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textTitle"
        style="@style/font_regular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="@dimen/margin_light"
        android:textSize="@dimen/font_light"
        android:text=""
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/color_white"
        />
    <TextView
        android:id="@+id/textPct"
        style="@style/font_bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="@dimen/margin_thin"
        android:textSize="@dimen/font_light"
        android:text=""
        android:textColor="@color/color_white"
        />
    <TextView
        android:id="@+id/textConfirmed"
        style="@style/font_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="@dimen/margin_extra_thin"
        android:text=""
        android:textSize="@dimen/font_thin"
        android:textColor="@color/color_white"
        />
    <TextView
        android:id="@+id/textDeaths"
        style="@style/font_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="@dimen/margin_extra_thin"
        android:textSize="@dimen/font_thin"
        android:text=""
        android:textColor="@color/color_red"
        />
    <TextView
        android:id="@+id/textRecovered"
        style="@style/font_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginTop="@dimen/margin_extra_thin"
        android:textSize="@dimen/font_thin"
        android:text=""
        android:textColor="@color/color_green"
        />
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_light"
        android:alpha="0.4"
        android:background="@color/color_gray" />
</LinearLayout>