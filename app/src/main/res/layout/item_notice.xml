<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_gray_deep"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_light"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textTitle"
            style="@style/font_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_weight="1"
            android:text="0000"
            android:textColor="@color/color_white"
            />
        <ImageView
            android:id="@+id/btnOpen"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:layout_gravity="start|center_vertical"
            android:tint="@color/color_gray"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_down" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_light"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_light"
            android:alpha="0.2"
            android:background="@color/color_gray" />
        <TextView
            android:id="@+id/textDesc"
            style="@style/font_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_marginTop="@dimen/margin_light"
            android:text="0000"
            android:textColor="@color/color_white"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_extra_thin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textDate"
            style="@style/font_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|top"
            android:layout_weight="1"
            android:text="0000"
            android:textColor="@color/color_gray"
            />
        <ImageButton
            android:id="@+id/btnLink"
            android:layout_width="@dimen/icon_regular"
            android:layout_height="@dimen/icon_regular"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/effect_circle_ripple"
            android:tint="@color/color_white"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_link" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/margin_light"
        android:alpha="0.4"
        android:background="@color/color_gray" />
</LinearLayout>